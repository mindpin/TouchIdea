- disabled = (!f.object.new_record? and (f.object.answered? or f.object.vote.questions.count == 1))
.nested-fields
  = f.input :title, disabled: disabled
  #answers.clearfix
    = f.simple_fields_for :answers do |answer|
      = render "answer_fields", :f => answer
    .links.col-sm-offset-3.col-sm-9
      = link_to_add_association '+ 增加一项可选回答', f, :answers, class: 'btn btn-default'
  %hr/
