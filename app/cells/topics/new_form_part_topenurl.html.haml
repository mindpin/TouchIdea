- style = @step_num > 1 ? 'display:none;' : ''
.part.topenurl{style: style, data: {step: @step_num}}
  .fields
    %label 请粘贴要分享的购物网址
    %textarea.form-control.url{:placeholder => '复制商品网页地址然后粘贴在这里', :rows => 4, name: 'vote[url]'}
    %input.url-infocard{type: :hidden, name: 'vote[infocard_id]'}

  .submits
    %a.loadurl.disabled{:href => 'javascript:;', data: {url: parse_url_infocards_path}}
      %i.fa.fa-arrow-circle-o-down
      %span 读取网址
    .loading{:style => 'display:none;'}
      .loadingtext 
        %span 正在读取
        %i.fa.fa-circle-o-notch.fa-spin  
      .loadingbar
        .p{:style => 'width:10%;'}
    .loaded-success{:style => 'display:none;'} 
      %span 读取完毕
      %i.fa.fa-check

    %a.next.skip{:href => 'javascript:;'}
      %span 跳过
      %i.fa.fa-forward
    %a.next.urldone{:href => 'javascript:;', :style => 'display:none;'}
      %span 下一步
      %i.fa.fa-chevron-right

  .loaded-failure{:style => 'display:none;'}
    %span 没能成功读取到信息，再试一次吧！
    %i.fa.fa-meh-o