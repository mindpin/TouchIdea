<%= simple_form_for vote, html: {onsubmit: 'return false;'} do |f| %>
  <div class="questions">
    <%= f.simple_fields_for :questions do |question| %>
      <div class="question">
        <div class="answers">
          <div class="panel panel-default">
            <div class="panel-heading">
              <h3 class="panel-title text-center">讨论要点：<%= question.object.title %></h3>
            </div>
            <div class="panel-body">
              <div class="row" style="position: relative;">
                <div class="col-xs-offset-4 col-xs-8">
                  <div class="row">
                    <%= question.simple_fields_for :answers do |answer| %>
                    <div class="answer col-xs-7">
                      <%= answer.input :voter_id, as: :boolean, label: false, inline_label: answer.object.try(:title) || answer.input(:title, wrapper: :inline_form), checked_value: nil, unchecked_value: nil, disabled: true %>
                    </div>
                    <% end -%>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end -%>
  </div>
<% end %>

