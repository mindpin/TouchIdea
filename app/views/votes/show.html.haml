.page-topic{:data => {:nav => :explore, :title => '议题详情', :id => @vote.id}}
  .header
    = link_to votes_path, class: 'back' do
      %i.fa.fa-chevron-left
    .title 为议题投票
    %a.share{:href => 'javascript:;'}
      %i.fa.fa-share

  .so
    .topic-header
      %h2.title= @vote.title
      - if !@vote.infocard.blank?
        - if @vote.infocard.kind == Infocard::Kind::PRODUCT
          .infocard.product
            .product-logo
              %img{:src => @vote.infocard.pictures[0]}
            .data
              .product-name= @vote.infocard.title
              .product-price= @vote.infocard.price
        - elsif @vote.infocard.kind == Infocard::Kind::APP
          .infocard.product
            .product-logo
              %img{:src => @vote.infocard.logo}
            .data
              .product-name= @vote.infocard.title
              .product-desc= @vote.infocard.desc

    .topic-options
      - @vote.vote_items.each do |vote_item|
        = link_to 'javascript:;', class: vote_item.praised_by?(current_user) ? 'option active' : 'option', 'data-vote_item_id' => vote_item.id do
          .text=vote_item.title
          .icon.i0
            %i.fa.fa-thumbs-up
          .icon.i1
            %i.fa.fa-check

    .topic-new-option
      %a.new.btn.btn-flat-success.btn-block{:href => 'javascript:;'}
        %i.fa.fa-plus
        %span 补充一个选项

    .vote-done
      %a.done.btn.btn-flat-success.btn-block.disabled{:href => 'javascript:;'}
        %i.fa.fa-check
        %span 投完了

    .new-option-overlay
      .form
        .fields
          %label 补充新选项
          %textarea.form-control{:placeholder => '输入选项内容', :rows => 3}
        .submits
          %a.cancel{:href => 'javascript:;'}
            %i.fa.fa-times
            %span 取消
          %a.ok.disabled{:href => 'javascript:;'}
            %i.fa.fa-check
            %span 确定

    .share-overlay
      .form
        .fields
          %label 分享到 …
          .s 这里集成到最后再做
        .submits
          %a.cancel{:href => 'javascript:;'}
            %i.fa.fa-times
            %span 取消
