.page-me.detail{:data => {:nav => :me}}
  .header
    .set.info
      .item.back
        %a.back{:href => '/account'}
          %i.fa.fa-chevron-left
        .title 详细信息
  .info-detail
    .set.info
      .item.info.me{:href => 'javascript:;'}
        .t 头像
        .avatar
          %img{:src => current_user.avatar_url}
      .item.info
        .t 昵称
        .v= current_user.nickname
      .item.info
        .t 所在地
        .v= current_user.location
      .item.info
        .t 性别
        .v= current_user.gender
      .item.info.userdesc
        .t 简介
        .v= current_user.description